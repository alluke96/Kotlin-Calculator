<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#16000000"
            android:fontFamily="monospace"
            android:gravity="end"
            android:keepScreenOn="true"
            android:maxLength="9"
            android:padding="8dp"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16000000"
            android:fontFamily="monospace"
            android:gravity="end"
            android:keepScreenOn="true"
            android:maxLength="9"
            android:padding="8dp"
            android:textAlignment="viewEnd"
            android:textSize="60sp"
            android:textStyle="bold" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#F48FB1"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="C"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F8BBD0" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFECB3"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="รท"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#FFECB3" />

        <Button
            android:id="@+id/button7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="7"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button8"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="8"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button9"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="9"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFECB3"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="x"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#FFECB3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="4"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="5"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="6"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFECB3"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="-"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#FFECB3" />

        <Button
            android:id="@+id/button1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/button3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="3"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#FFECB3"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="+"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#FFECB3" />

        <Button
            android:id="@+id/button0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:backgroundTint="#D1C4E9"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#F3E5F5" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#B3E5FC"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#E1F5FE" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#C5E1A5"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:text="="
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#DCEDC8" />

    </GridLayout>

</LinearLayout>
